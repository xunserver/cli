{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/template/*.js"]
}
