{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "preserve",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@src/": ["src/*"]
    }
  },
  "include": ["src"]
}
